<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Accord.BottomNavigation"/>
    <style name="BottomNavigation.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:minHeight">@dimen/bottom_nav_height</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/cl_bottom_nav_label</item>
        <item name="itemTextColor">@color/cl_bottom_nav_label</item>
        <item name="itemRippleColor">@color/accentColorFainted</item>
        <item name="elevation">0dp</item>
        <item name="itemPaddingTop">@dimen/bottom_nav_item_padding_top</item>
        <item name="itemPaddingBottom">@dimen/bottom_nav_item_padding_bottom</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemTextAppearanceActive">@style/Widget.Accord.BottomNavigation.BottomNavigationView.LabelText</item>
        <item name="itemTextAppearanceInactive">@style/Widget.Accord.BottomNavigation.BottomNavigationView.LabelText</item>
    </style>
    <style name="Widget.Accord.BottomNavigation.BottomNavigationView.Divider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/bottomNavigationDividerColor</item>
    </style>
    <style name="Widget.Accord.BottomNavigation.BottomNavigationView.LabelText" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:textColorHighlight">@color/accentColor</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="Widget.Accord.BottomNavigation.BottomSheet">
        <item name="layout_behavior">uk.akane.accord.logic.ui.CustomBottomSheetBehavior</item>
        <item name="behavior_peekHeight">108dp</item>
    </style>
    <style name="Widget.Accord.BottomNavigation.BottomSheet.Preview"/>
    <style name="Widget.Accord.ActionButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/cl_action_btn_icon</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">256dp</item>
    </style>
    <style name="Widget.Accord.BottomNavigation.BottomSheet.ActionButton" parent="Widget.Accord.ActionButton" />
    <style name="Widget.Accord.BottomNavigation.BottomSheet.Preview.Cover">
        <item name="shapeAppearance">@style/Widget.Accord.BottomNavigation.BottomSheet.Preview.Cover.Shape</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/coverBorder</item>
        <item name="android:padding">0.5dp</item>
    </style>
    <style name="Widget.Accord.BottomNavigation.BottomSheet.Preview.Cover.Shape">
        <item name="cornerSize">4dp</item>
    </style>
    <style name="BottomNavigation.BottomSheet.ActionButton.Preview" parent="Widget.Accord.BottomNavigation.BottomSheet.ActionButton">
        <item name="iconSize">28dp</item>
    </style>
    <style name="Widget"/>
    <style name="Widget.Accord"/>
    <style name="Widget.Accord.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/surfaceColor</item>
        <item name="android:elevation">0dp</item>
        <item name="layout_collapseMode">pin</item>
        <item name="android:orientation">vertical</item>
        <item name="contentInsetStart">0dp</item>
        <item name="titleMarginStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="titleMarginEnd">0dp</item>
        <item name="contentInsetEndWithActions">0dp</item>
        <item name="titleCentered">true</item>
    </style>
    <style name="Widget.Accord.Avatar">

    </style>
    <style name="Widget.Accord.Avatar.Shape">
        <item name="cornerSize">21dp</item>
    </style>
    <style name="Widget.Accord.CollapseToolbar">
        <item name="collapsedTitleTextAppearance">@style/Widget.Accord.CollapseToolbar.CollapsedTitle</item>
        <item name="collapsedTitleTextColor">@color/onSurfaceColor</item>
        <item name="expandedTitleMarginStart">24dp</item>
        <item name="expandedTitleGravity">bottom</item>
        <item name="expandedTitleMarginBottom">20dp</item>
        <item name="expandedTitleTextAppearance">@style/Widget.Accord.CollapseToolbar.ExpandedTitle</item>
        <item name="expandedTitleTextColor">@color/onSurfaceColor</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
        <item name="titleCollapseMode">fade</item>
    </style>
    <style name="Widget.Accord.CollapseToolbar.ExpandedTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">.01</item>
    </style>
    <style name="Widget.Accord.CollapseToolbar.CollapsedTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="Widget.Accord.SetupWizard"/>
    <style name="Widget.Accord.SetupWizard.WelcomePage"/>
    <style name="Widget.Accord.SetupWizard.PermissionPage" />

        <item name="android:minHeight">64dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/accentColor</item>
        <item name="android:textColor">@color/onAccentColor</item>
    </style>
    <style name="Widget.Accord.SetupWizard.WelcomePage.Icon">
        <item name="shapeAppearance">@style/Widget.Accord.SetupWizard.WelcomePage.Icon.Shape</item>
    </style>
    <style name="Widget.Accord.SetupWizard.WelcomePage.Icon.Shape">
        <item name="cornerSize">24dp</item>
    </style>
    <style name="Widget.Accord.SetupWizard.WelcomePage.Title">
        <item name="android:textColor">@color/onSurfaceColor</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Widget.Accord.SetupWizard.PermissionPage.Icon">
        <item name="shapeAppearance">@style/Widget.Accord.SetupWizard.PermissionPage.Icon.Shape</item>
    </style>
    <style name="Widget.Accord.SetupWizard.PermissionPage.Icon.Shape">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="Widget.Accord.SetupWizard.PermissionPage.AskButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">

    </style>
    <style name="Widget.Accord.Main" />
    <style name="Widget.Accord.ActionPanel" />
    <style name="Widget.Accord.ActionPanel.MasterControl" />
    <style name="Widget.Accord.ActionPanel.MasterControl.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="backgroundTint">@color/onSurfaceColorFainted</item>
        <item name="android:textColor">@color/accentColor</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="iconTint">@color/accentColor</item>
        <item name="iconGravity">textStart</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>

        <item name="shapeAppearance">@style/Widget.Accord.ActionPanel.FullPlayer.Cover.Shape</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Widget.Accord.ActionPanel.FullPlayer.Cover.Shape">
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Widget.Accord.Main.Browse" />
    <style name="Widget.Accord.Main.Browse.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
